<div class="g-banner-homepage_15" {% if section.settings.margin != blank %}style="margin: {{ section.settings.margin }};"{% endif %}>
  {% if section.settings.title != blank %}
  <h2 class="text-center">{{ section.settings.title }}</h2>
  {% endif %}
  {% for block in section.blocks %}
  {%- case block.settings.width -%}
  {% when '1' %}
  {% assign featured_banner_width = 'col-sm-6 col-xs-12' %}
  {% when '2' %}
  {% assign featured_banner_width = 'col-sm-12 col-xs-12' %}
  {%- endcase -%}
  {% if block.type == 'banner1' %}
  <div class="{{ featured_banner_width }} col-banner-hover" style="padding: 0;">
    <div class="col-relative">
      <div class="banner--image">
        {% if block.settings.image != blank %}
        <div class="banner--image_bg lazy" data-src="{{ block.settings.image | img_url: 'master', format: 'pjpg' | split:'?' | first }}" style="padding-top: 118%;"></div>
        {% else %}
        {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
        {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="banner--info">
        <div class="table-banner">
          <div class="table-cell-banner text-center">
            {% if block.settings.title != blank %}
            <div class="title">{{ block.settings.title }}</div>
            {% endif %}
          </div>
        </div>
      </div>
      {% if block.settings.link != blank %}
      <a href="{{ block.settings.link }}" class="overflow-link"></a>
      {% endif %}
    </div>
  </div>
  {% endif %}
  {% if block.type == 'banner2' %}
  <div class="{{ featured_banner_width }} col-banner-hover" style="padding: 0;">
    <div class="col-relative">
      <div class="banner--image">
        {% if block.settings.image != blank %}
        <div class="banner--image_bg lazy" data-src="{{ block.settings.image | img_url: 'master', format: 'pjpg' | split:'?' | first }}" style="padding-top: 59%;"></div>
        {% else %}
        {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
        {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="banner--info">
        <div class="table-banner">
          <div class="table-cell-banner">
            {% if block.settings.title != blank %}
            <div class="title">{{ block.settings.title }}</div>
            {% endif %}
          </div>
        </div>
      </div>
      {% if block.settings.link != blank %}
      <a href="{{ block.settings.link }}" class="overflow-link"></a>
      {% endif %}
    </div>
    <div class="col-relative">
      <div class="banner--image">
        {% if block.settings.image2 != blank %}
        <div class="banner--image_bg lazy" data-src="{{ block.settings.image2 | img_url: 'master', format: 'pjpg' | split:'?' | first }}" style="padding-top: 59%;"></div>
        {% else %}
        {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
        {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="banner--info">
        <div class="table-banner">
          <div class="table-cell-banner">
            {% if block.settings.title2 != blank %}
            <div class="title">{{ block.settings.title2 }}</div>
            {% endif %}
          </div>
        </div>
      </div>
      {% if block.settings.link2 != blank %}
      <a href="{{ block.settings.link2 }}" class="overflow-link"></a>
      {% endif %}
    </div>
  </div>
  {% endif %}
  {% endfor %}
</div>

